<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/exit_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/voice_dialog_layout_bg"
    android:gravity="center_horizontal"
    android:minWidth="200dip"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/dialog_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="5dp"
        android:text="标题"
        android:textColor="#666666"
        android:textSize="20sp"
        android:visibility="gone" />

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/dialog_remind"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center"
                android:minHeight="90dip"
                android:padding="15dip"
                android:text="提醒内容"
                android:textColor="#333"
                android:textSize="16sp" />
        </LinearLayout>
    </ScrollView>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:layout_marginTop="10dip"
        android:layout_weight="1"
        android:background="#CCCCCC" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1" >

        <Button
            android:id="@+id/dialog_btn_1"
            android:layout_width="fill_parent"
            android:layout_height="50dip"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center"
            android:onClick="exitbutton0"
            android:text="确认"
            android:textColor="@color/royalblue"
            android:textSize="16sp" />

        <TextView
            android:layout_width="0.5px"
            android:layout_height="match_parent"
            android:background="#CCCCCC" />

        <Button
            android:id="@+id/dialog_btn_2"
            android:layout_width="fill_parent"
            android:layout_height="50dip"
            android:layout_marginLeft="1dip"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center"
            android:onClick="exitbutton1"
            android:paddingLeft="30dip"
            android:paddingRight="30dip"
            android:text="取消"
            android:textColor="@color/royalblue"
            android:textSize="16sp" />
    </LinearLayout>

</LinearLayout>