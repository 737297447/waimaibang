<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_anim"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:gravity="center_horizontal"
    android:layoutAnimation="@anim/anim_guide"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/txt_crowd_title"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:gravity="bottom"
        android:text="和谁去?"
        android:textColor="#ffffff"
        android:textSize="30sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1.0"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_marginTop="10dp"
            android:layout_weight="1.0"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="20dp"
                android:layout_weight="1.0"
                android:orientation="vertical" >

                <RelativeLayout
                    android:id="@+id/pic_crowd_01"
                    android:layout_width="match_parent"
                    android:layout_height="0dip"
                    android:layout_weight="1"
                    android:background="@drawable/crowd_01" >

                    <ImageView
                        android:id="@+id/sel_crowd_01"
                        android:layout_width="25dip"
                        android:layout_height="25dip"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/selected"
                        android:visibility="invisible" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/txt_crowd_01"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="单身"
                    android:textColor="#ea7f00"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="40dp"
                android:layout_weight="1.0"
                android:orientation="vertical" >

                <RelativeLayout
                    android:id="@+id/pic_crowd_02"
                    android:layout_width="match_parent"
                    android:layout_height="0dip"
                    android:layout_weight="1"
                    android:background="@drawable/crowd_02" >

                    <ImageView
                        android:id="@+id/sel_crowd_02"
                        android:layout_width="25dip"
                        android:layout_height="25dip"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/selected"
                        android:visibility="invisible" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/txt_crowd_02"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="情侣"
                    android:textColor="#ea7f00"
                    android:textSize="18sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_marginTop="10dp"
            android:layout_weight="1.0"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="20dp"
                android:layout_weight="1.0"
                android:orientation="vertical" >

                <RelativeLayout
                    android:id="@+id/pic_crowd_03"
                    android:layout_width="match_parent"
                    android:layout_height="0dip"
                    android:layout_weight="1"
                    android:background="@drawable/crowd_03" >

                    <ImageView
                        android:id="@+id/sel_crowd_03"
                        android:layout_width="25dip"
                        android:layout_height="25dip"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/selected"
                        android:visibility="invisible" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/txt_crowd_03"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="群体"
                    android:textColor="#ea7f00"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="40dp"
                android:layout_weight="1.0"
                android:orientation="vertical" >

                <RelativeLayout
                    android:id="@+id/pic_crowd_04"
                    android:layout_width="match_parent"
                    android:layout_height="0dip"
                    android:layout_weight="1"
                    android:background="@drawable/crowd_04" >

                    <ImageView
                        android:id="@+id/sel_crowd_04"
                        android:layout_width="25dip"
                        android:layout_height="25dip"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/selected"
                        android:visibility="invisible" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/txt_crowd_04"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="闺蜜"
                    android:textColor="#ea7f00"
                    android:textSize="18sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/txt_crowd_info"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical"
        android:text="还有更多选择在app里面噢"
        android:textColor="#ffffff"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:gravity="center_vertical" >

        <ImageView
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:src="@drawable/poing_gray" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:src="@drawable/poing_white" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:src="@drawable/poing_white" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_crowd"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@drawable/shape"
        android:gravity="center"
        android:text="下一步"
        android:textColor="#ffffff" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp" >
    </LinearLayout>

</LinearLayout>