<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/zhoubian_linearlayout"
        android:layout_width="fill_parent"
        android:layout_height="108dip"
        android:orientation="horizontal" >

        <com.lingdian.waimaibang.tools.RoundAngleImageView
            android:id="@+id/zhoubian_image"
            android:layout_width="92dip"
            android:layout_height="92dip"
            android:layout_margin="8dip"
            android:scaleType="fitXY"
            android:src="@drawable/nonal_pic" >
        </com.lingdian.waimaibang.tools.RoundAngleImageView>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_margin="4dip"
            android:orientation="vertical"
            android:weightSum="4" >

            <TextView
                android:id="@+id/zhoubian_localname"
                android:layout_width="fill_parent"
                android:layout_height="0dip"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="张世明旧宅"
                 android:textSize="18sp"
                android:textColor="#666666" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="0dip"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="10dip"
                    android:layout_height="10dip"
                    android:src="@drawable/dd_bkd" />

                <TextView
                    android:id="@+id/zhoubian_address"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:gravity="center_vertical"
                    android:text="浙江省杭州市西湖区"
                    android:textColor="#909090"
                    android:textSize="8sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="0dip"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="30dip"
                    android:layout_height="18dip"
                    android:background="@drawable/huise_bg"
                    android:gravity="center"
                    android:text="玩法"
                    android:textColor="@color/white"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/zhoubian_zhonglei"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="2dip"
                    android:gravity="center_vertical"
                    android:text="3种"
                    android:textColor="#909090"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="0dip"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="30dip"
                    android:layout_height="18dip"
                    android:background="@drawable/huise_bg"
                    android:gravity="center"
                    android:text="适合"
                    android:textColor="@color/white"
                    android:textSize="10sp" />

                <TextView
                     android:id="@+id/zhoubian_tag"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="2dip"
                    android:gravity="center_vertical"
                    android:text="闺蜜  古镇  文艺  古迹  情景"
                    android:textColor="#909090"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dip"
        android:background="@color/huise" />

</LinearLayout>