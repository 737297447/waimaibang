<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <include layout="@layout/titie_header_back" />

    <LinearLayout
        android:id="@+id/detail_zanwupinglun"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center"
        android:layout_weight="1"
        android:visibility="gone" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="暂无评论"
            android:textColor="@color/huise"
            android:textSize="14sp" />
    </LinearLayout>

    <ListView
        android:id="@+id/jingxuan_pinglun_listview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:divider="#cccccc"
        android:layout_weight="1"
        android:dividerHeight="0.5dip"
        android:scrollbars="none" >
    </ListView>
    

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#ffe5e5e5"
             android:padding="8.0dip"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/check_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0/140"
                android:textColor="@color/gray"
                android:textSize="14sp"
                 />

            <EditText
                android:id="@+id/post_comment_input"
                android:layout_width="0.0dip"
                android:layout_height="40.0dip"
                android:layout_marginLeft="10.0dip"
                android:layout_weight="4.0"
                android:background="@drawable/none_underline_shape"
                android:inputType="text"
                android:paddingLeft="10.0dip"
                android:paddingRight="10.0dip" />

            <TextView
                android:id="@+id/post_input_send"
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_marginLeft="9.0dip"
                android:layout_weight="1.0"
                android:gravity="center"
                android:text="发送"
                android:textColor="#ff595959"
                android:textSize="22.0sp" />
        </LinearLayout>
    

</LinearLayout>