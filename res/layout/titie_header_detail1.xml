<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dip"
    android:background="@color/transparent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/title_img_bg"
            android:layout_width="fill_parent"
            android:layout_height="50dip"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:id="@+id/wanfa_title"
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="10.0dip"
                android:paddingTop="10.0dip" >

                <ImageView
                    android:id="@+id/title_bar_left"
                    android:layout_width="44.5dip"
                    android:layout_height="22.5dip"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:onClick="onClickLiftMenu"
                    android:paddingLeft="11.0dip"
                    android:paddingRight="11.0dip"
                    android:src="@drawable/groups_title_bar_back_icon" />

                <ImageView
                    android:id="@+id/title_bar_shoucang"
                    android:layout_width="20dip"
                    android:layout_height="20dip"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="3dip"
                    android:layout_marginRight="10dip"
                    android:layout_marginTop="3dip"
                    android:src="@drawable/wantgo_hui" />

                <TextView
                    android:id="@+id/title_bar_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:text=""
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/title_bar_guanyu"
                    android:layout_width="20dip"
                    android:layout_height="20dip"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:layout_toLeftOf="@+id/title_bar_shoucang"
                    android:src="@drawable/groups_crouton_warning_icon" />

                <ImageView
                    android:id="@+id/title_bar_local"
                    android:layout_width="23dip"
                    android:layout_height="23dip"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:layout_toLeftOf="@+id/title_bar_guanyu"
                    android:src="@drawable/icon_location" />
            </RelativeLayout>

            <View
                android:id="@+id/title_singline"
                android:layout_width="fill_parent"
                android:layout_height="0.5dip"
                android:background="@color/huise" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>