<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:baselineAligned="false"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="0.0dip"
        android:layout_height="fill_parent"
        android:layout_weight="2.0"
        android:gravity="center_horizontal" >
    </LinearLayout>

    <LinearLayout
        android:layout_width="0.0dip"
        android:layout_height="fill_parent"
        android:layout_weight="1.0" 
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <View
            android:id="@+id/top_singline_1"
            android:layout_width="1dip"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:contentDescription="@null"
            android:scaleType="fitXY"
            android:background="@color/red" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_above="@+id/top_singline_1"
            android:background="@drawable/icon_location_shixin"
            android:gravity="center" >

            <TextView
                android:id="@+id/city_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textColor="@color/white"
                android:textSize="10sp" />
        </LinearLayout>
        
        
        <View
            android:id="@+id/top_singline_2"
            android:layout_width="1dip"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:contentDescription="@null"
            android:scaleType="fitXY"
            android:background="@color/red" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0.0dip"
        android:layout_height="wrap_content"
        android:layout_margin="10.0dip"
        android:layout_marginTop="5.0dip"
        android:layout_weight="12.0"
        android:background="@drawable/radius_layout_shape"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/no_select_layout"
            android:layout_width="fill_parent"
            android:layout_height="30dip"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/city_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:text=""
                android:textColor="@color/teal"
                android:textSize="14.0sp" />

            <TextView
                android:id="@+id/city_dizhi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/gray"
                android:textSize="10.0sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/select_layout"
            android:layout_width="fill_parent"
            android:layout_height="100dip"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:visibility="gone"
            android:weightSum="3" >

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="0dip"
                android:layout_weight="1"
                android:gravity="center_vertical" >

                <TextView
                    android:id="@+id/city_name2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dip"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="14.0sp" />

                <ImageView
                    android:layout_width="14dip"
                    android:layout_height="14dip"
                    android:layout_alignBottom="@+id/city_name2"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="15dp"
                    android:src="@drawable/collection_press" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="0dip"
                android:layout_weight="1"
                android:gravity="top" >

                <TextView
                    android:id="@+id/city_dizhi2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dip"
                    android:text=""
                    android:textColor="@color/gray"
                    android:textSize="10.0sp" />
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dip"
                android:background="@color/huise" />

            <LinearLayout
                android:id="@+id/city_layout_wanfa"
                android:layout_width="fill_parent"
                android:layout_height="0dip"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dip"
                    android:text="共有"
                    android:textColor="@color/gray"
                    android:textSize="10.0sp" />

                <TextView
                    android:id="@+id/city_wanfa_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textColor="@color/red"
                    android:textSize="10.0sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="种玩法，去看地点详情"
                    android:textColor="@color/gray"
                    android:textSize="10.0sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>