<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/mudidi_all_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="200dip" >

            <ImageView
                android:id="@+id/mudidi_img"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:scaleType="fitXY"
                android:src="@drawable/image_bg" />

            <LinearLayout
                android:id="@+id/mudidi_layout"
                android:layout_width="fill_parent"
                android:layout_height="180dip"
                android:orientation="vertical"
                android:weightSum="3" >

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0dip"
                    android:layout_weight="2" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="0dip"
                    android:layout_marginLeft="10dip"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:weightSum="2" >

                    <TextView
                        android:id="@+id/mudidi_localname"
                        android:layout_width="fill_parent"
                        android:layout_height="0dip"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="九溪烟村"
                        android:textColor="@color/white"
                        android:textSize="20sp" />

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="0dip"
                        android:layout_weight="1"
                        android:gravity="top" >

                        <TextView
                            android:id="@+id/mudidi_address"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="杭州市"
                            android:textColor="@color/white"
                            android:textSize="12sp" />

                        <LinearLayout
                            android:id="@+id/mudidi_shangdian_layout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginRight="60dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal" >

                            <ImageView
                                android:layout_width="15dip"
                                android:layout_height="15dip"
                                android:src="@drawable/shangpin_press" />

                            <TextView
                                android:id="@+id/mudidi_shangdian_num"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dip"
                                android:text="4"
                                android:textColor="@color/white"
                                android:textSize="12sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/mudidi_wanfa_layout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginRight="20dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal" >

                            <ImageView
                                android:layout_width="15dip"
                                android:layout_height="15dip"
                                android:src="@drawable/wanfa_press" />

                            <TextView
                                android:id="@+id/mudidi_wanfa_num"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dip"
                                android:text="14"
                                android:textColor="@color/white"
                                android:textSize="12sp" />
                        </LinearLayout>
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

        <android.support.v4.view.ViewPager
            android:id="@+id/gril_viewpage"
            android:layout_width="match_parent"
            android:layout_height="100dip" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <com.lingdian.waimaibang.view.ViewPagerItem
                android:id="@+id/viewpage_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/dp80" />
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="20dip"
            android:background="@color/white" />
    </LinearLayout>

</LinearLayout>