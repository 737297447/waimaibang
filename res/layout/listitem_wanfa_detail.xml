<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/wanfa_user_layout"
        android:layout_width="fill_parent"
        android:layout_height="40dip"
        android:layout_margin="6dip"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <com.lingdian.waimaibang.tools.CircleImageView
            android:id="@+id/wanfa2_avator"
            android:layout_width="38dip"
            android:layout_height="38dip"
            android:src="@drawable/empty_photo" />

        <TextView
            android:id="@+id/wanfa2_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:maxWidth="180dip"
            android:singleLine="true"
            android:text=""
            android:textColor="#576B95"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/wanfa2_time"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:gravity="right"
            android:text=""
            android:textColor="@color/huise"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/detail_local_address"
        android:layout_width="fill_parent"
        android:layout_height="30dip"
        android:layout_marginLeft="48dip"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="10dip"
            android:layout_height="10dip"
            android:src="@drawable/dd_dk" />

        <TextView
            android:id="@+id/local_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:text=""
            android:textColor="@color/blue" />

        <TextView
            android:id="@+id/local_juli"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:text=""
            android:textColor="@color/gray"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/wanfa2_message_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/wanfa2_shuoshuo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="48dip"
            android:layout_marginRight="10dip"
            android:layout_marginTop="10dip"
            android:maxLines="4"
            android:text=""
            android:textColor="#666666"
            android:textSize="16sp" />

        <LinearLayout
            android:id="@+id/wanfa2_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="48dip"
            android:layout_marginTop="10dip"
            android:background="@drawable/biankuang_gray_bg" >

            <TextView
                android:id="@+id/wanfa2_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dip"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="5dip"
                android:layout_marginTop="2dip"
                android:text="展开阅读"
                android:textColor="#666666"
                android:textSize="14sp" />
        </LinearLayout>

        <com.lingdian.waimaibang.view.NoScrollGridView
            android:id="@+id/wanfa2_gridView"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="48dp"
            android:layout_marginRight="15dip"
            android:layout_marginTop="10dip"
            android:horizontalSpacing="3dp"
            android:numColumns="3"
            android:stretchMode="columnWidth"
            android:verticalSpacing="5dp" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dip"
            android:layout_marginLeft="48dp"
            android:layout_marginTop="5dip" >

            <TextView
                android:id="@+id/tags"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="单身  清洁  摄影  古迹"
                android:textColor="@color/huise"
                android:textSize="10sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="30dip"
        android:layout_marginTop="5dip"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <View
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="3" />

        <LinearLayout
            android:id="@+id/detail_dianzan_layout"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/detail_dianzan_img"
                android:layout_width="23dip"
                android:layout_height="23dip"
                android:layout_marginBottom="1dip"
                android:src="@drawable/icon_ding0" />

            <TextView
                android:id="@+id/detail_dianzan_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:text=""
                android:textColor="@color/huise"
                android:textSize="11sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/detail_pinglun_layout"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="23dip"
                android:layout_height="23dip"
                android:layout_marginTop="3dip"
                android:src="@drawable/message" />

            <TextView
                android:id="@+id/detail_pinglun_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:text=""
                android:textColor="@color/huise"
                android:textSize="11sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/detail_share_layout"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="23dip"
                android:layout_height="23dip"
                android:src="@drawable/icon_share" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/wo_quguo_delete"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="gone" >

            <ImageView
                android:layout_width="25dip"
                android:layout_height="25dip"
                android:src="@drawable/icon_trash" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:layout_marginTop="10dip"
        android:background="@color/huise" />

</LinearLayout>