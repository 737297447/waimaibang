<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <include layout="@layout/titie_header_common" />

        <com.lingdian.waimaibang.tools.ad.AdBannerView
            android:id="@+id/waimaibang_huodong"
            android:layout_width="match_parent"
            android:layout_height="90dip"
            android:fadingEdgeLength="0.0dp"
            android:keepScreenOn="true"
            android:soundEffectsEnabled="false" />

        <LinearLayout
            android:id="@+id/wo_top_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="50dip"
                android:orientation="horizontal" >

                <LinearLayout
                    android:id="@+id/wo_quguo_layout"
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/wo_quguo_img"
                        android:layout_width="25dip"
                        android:layout_height="25dip"
                        android:src="@drawable/elm_icon" />

                    <TextView
                        android:id="@+id/wo_quguo_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dip"
                        android:text="饿了么"
                        android:textColor="#909090"
                        android:textSize="14sp" />
                </LinearLayout>

                <ImageView
                    android:layout_width="0.5dip"
                    android:layout_height="fill_parent"
                    android:layout_marginBottom="5dip"
                    android:layout_marginTop="5dip"
                    android:background="@color/huise" />

                <LinearLayout
                    android:id="@+id/wo_xiangqu_layout"
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/wo_xiangqu_img"
                        android:layout_width="25dip"
                        android:layout_height="25dip"
                        android:src="@drawable/takeout_ic_launcher" />

                    <TextView
                        android:id="@+id/wo_xiangqu_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dip"
                        android:text="美团外卖"
                        android:textColor="#909090"
                        android:textSize="14sp" />
                </LinearLayout>

                <ImageView
                    android:layout_width="0.5dip"
                    android:layout_height="fill_parent"
                    android:layout_marginBottom="5dip"
                    android:layout_marginTop="5dip"
                    android:background="@color/huise" />

                <LinearLayout
                    android:id="@+id/wo_xiaoxi_layout"
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/wo_xiaoxi_img"
                        android:layout_width="25dip"
                        android:layout_height="25dip"
                        android:src="@drawable/about_logo" />

                    <TextView
                        android:id="@+id/wo_xiaoxi_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dip"
                        android:text="百度外卖"
                        android:textColor="#909090"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dip"
                android:background="@color/huise" />
        </LinearLayout>

        <FrameLayout
            android:id="@+id/wo_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" />
    </LinearLayout>

</LinearLayout>